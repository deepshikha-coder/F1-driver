{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
  }
}